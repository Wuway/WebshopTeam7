<Window x:Class="OrderApp.Views.OrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Management" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBox x:Name="CustomerIdTextBox"/>
            <Button Content="Create Order"/>
            <ListBox ItemsSource="{Binding Order}" DisplayMemberPath="OrderId"/>
        </StackPanel>
    </Grid>
</Window>